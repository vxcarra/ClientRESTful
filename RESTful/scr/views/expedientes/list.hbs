<div class="container p-4">
    <div class="row">
        {{#each expedientes}}
        <div class="col-md-12 mx-auto">
            <div class="container-fluid">
                <div id="ui-view" data-select2-id="ui-view">
                    <div>
                        <div class="card">
                            <div class="card-header">EXPEDIENTE <strong>NO. {{expedienteId}}</strong>
                                <a class="btn btn-sm btn-outline-secondary float-right mr-1 d-print-none" href="#"
                                    onclick="javascript:window.print();" data-abc="true">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-printer-fill" viewBox="0 0 16 16">
                                        <path d="M5 1a2 2 0 0 0-2 2v1h10V3a2 2 0 0 0-2-2H5zm6 8H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1z"/>
                                        <path d="M0 7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-2a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v2H2a2 2 0 0 1-2-2V7zm2.5 1a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1z"/>
                                    </svg>
                                <a class="btn btn-sm btn-outline-info float-right mr-1 d-print-none" href="/expedientes/edit/{{expedienteId}}" data-abc="true">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                                    </svg>
                                <a class="btn btn-sm btn-outline-danger float-right mr-1 d-print-none" href="/expedientes/delete/{{expedienteId}}" data-abc="true">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                                    </svg>
                                </a>
                                <a class="btn btn-sm btn-outline-success float-right mr-1 d-print-none" href="/expedientes/{{expedienteId}}" data-abc="true">
                                    Ver
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                        <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
                                        <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
                                    </svg>
                                </a>
                                <a class="btn btn-sm btn-outline-warning float-right mr-1 d-print-none" href="/expedientes/{{expedienteId}}/notas" data-abc="true">
                                    Notas
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-files" viewBox="0 0 16 16">
                                        <path d="M13 0H6a2 2 0 0 0-2 2 2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h7a2 2 0 0 0 2-2 2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm0 13V4a2 2 0 0 0-2-2H5a1 1 0 0 1 1-1h7a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1zM3 4a1 1 0 0 1 1-1h7a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V4z"/>
                                    </svg>
                                </a>
                            </div>
                            <div class="card-body">
                                <div class="row mb-4">
                                    <div class="col-sm-4">
                                        <div>
                                            <strong>{{nombreCompleto}}</strong> 
                                        </div>
                                        <div class="pl-3">Género: {{genero}}</div>
                                        <div class="pl-3">Ocupación: {{ocupacion}}</div>
                                        <div class="pl-3">Estado Civil: {{estadoCivil}}</div>
                                        <div class="pl-3">Fecha de Nacimiento: {{dateFormat fechaNacimiento "DD-MM-YYYY"}}</div>
                                        <div class="pl-3"> <strong>Fecha de alta: {{dateFormat fechaAlta "DD-MM-YYYY"}}</strong></div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div>
                                            <strong>Contacto</strong>
                                        </div>
                                        <div class="pl-3">Teléfono: {{telefono}}</div>
                                        <div class="pl-3">Celular: {{celular}}</div>
                                        <div class="pl-3">Correo Electrónico: {{correo}}</div>

                                    </div>
                                    <div class="col-sm-4">
                                        <div>
                                            <strong>Domicilio</strong>
                                        </div>
                                        <div class="pl-3">Colonia: {{colonia}}</div>
                                        <div class="pl-3">Calle: {{calle}}</div>
                                        <div class="pl-3">Número Exterior: {{numExt}}</div>
                                        <div class="pl-3">Número Exterior: {{numInt}}</div>
                                        <div class="pl-3">CP: {{cp}}</div>
                                    </div>
                                </div>

                                <div class="table-responsive-sm">
                                    <table class="table table">
                                        <thead>
                                            <tr>
                                                <th>Antecedentes Heredados</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="left">{{antHeredados}}</td>
                                            </tr>
                                        </tbody>
                                    </table>

                                    <table class="table table">
                                        <thead>
                                            <tr>
                                                <th>Antecedentes Patológicos </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="left">{{antPat}}</td>
                                            </tr>
                                        </tbody>
                                    </table>

                                    <table class="table table">
                                        <thead>
                                            <tr>
                                                <th>Antecedentes No Patológicos</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="left">{{antNoPat}}</td>
                                            </tr>
                                        </tbody>
                                    </table>

                                    <table class="table table">
                                        <thead>
                                            <tr>
                                                <th>Antecedentes Perinatales</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="left">{{antPeri}}</td>
                                            </tr>
                                        </tbody>
                                    </table>

                                    <table class="table table">
                                        <thead>
                                            <tr>
                                                <th>Antecedentes Ginecoobstétricos</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="left">{{antGineco}}</td>
                                            </tr>
                                        </tbody>
                                    </table>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay expedientes por mostrar.</p>
                <a href="/expedientes/add">Añadir nuevo expediente</a>
            </div>
        </div>
    </div>
</div>