                                <input type="text" style="width:175px" id="notaExp" name="notaExp" class="form-control">
                                <a class="ml-3" onclick="this.href='/expedientes/notaExp/'+document.getElementById('notaExp').value" href="" data-abc="true">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                                    </svg>
                                </a>
                            </div>                  
                        </div>
                    </div>

                     <div class="leftpane">
                           <div class="row mb-3">
                                <label class="mr-2" for="expedienteId">Nota Id:</label>
                                <input type="text" style="width:168px" id="idNota" name="idNota" class="form-control">
                                <a class="ml-3" onclick="this.href='/expedientes/idNota/'+document.getElementById('idNota').value" href="" data-abc="true">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                                    </svg>
                                </a>
                            </div>

                            <div class="row mb-3">
                                <label class="mr-2" for="fechaAlta">Visita:</label>
                                <input type="date" style="width:175px" id="fechaVisita" name="fechaVisita" class="form-control">
                                <a class="ml-3" onclick="this.href='/expedientes/visita/'+document.getElementById('fechaVisita').value" href="" data-abc="true">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                                    </svg>
                                </a>
                            </div>                  
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
